<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
        uri="javafx:com.sun.javafx.tools.ant"
        classpath="${JAVA_HOME}/lib/ant-javafx.jar"/>
        <mkdir dir="build/classes"/>
        <javac  srcdir="BattleBoats-Scenes/src;
                        BattleBoats-Scenes/src/Assets;
                        BattleBoats-Scenes/src/Scenes;"
                destdir="build/classes"
                includeantruntime="false"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/battlebots.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="BattleboatsMain"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/battlebots.jar" fork="true"/>
    </target>

</project>